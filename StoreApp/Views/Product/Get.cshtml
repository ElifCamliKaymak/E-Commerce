@model Product

@if (Model != null)
{

    <div class="row">
        <div class="col-md-12">
            <div class="text-center">
                <h6 class="display-6">
                    @Model.ProductName
                </h6>

                <img class="img-fluid shadow rounded-3 p-5 my-3" src="@Model?.ImageUrl" width="300px"
                    alt="@Model.ProductName">

                <p class="lead text-danger">@Model.Price.ToString("c")</p>
            </div>
        </div>

    </div>

    <div class="text-center">
        <div class="btn-group">
            <a class="btn btn-outline-secondary rounded-2 mx-2" asp-controller="Product" asp-action="Index">
                <i class="fa-solid fa-arrow-left"></i>
            </a>
            <a class="btn btn-outline-secondary rounded-2 mx-2" asp-controller="Home" asp-action="Index">
                <i class="fa-solid fa-house"></i>
            </a>
            <form id="@Model.ProductId" asp-page="/cart" method="post">
                <input type="hidden" asp-for="ProductId" />
                <input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()">
                <button type="submit" class="btn btn-outline-secondary rounded-2 mx-2">
                    <i class="fa fa-cart-plus"></i>
                </button>
            </form>
        </div>
    </div>
}
