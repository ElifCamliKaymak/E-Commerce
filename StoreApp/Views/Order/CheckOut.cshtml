@model Order

<form method="post" asp-action="CheckOut">
    <div class="form-group my-3">
        <label asp-for="Name">Name</label>
        <input class="form-control" asp-for="Name">
        <span class="text-danger" asp-validation-for="Name"></span>
    </div>
    <div class="form-group my-3">
        <label asp-for="Line1">Line1</label>
        <input class="form-control" asp-for="Line1">
        <span class="text-danger" asp-validation-for="Line1"></span>

    </div>
    <div class="form-group my-3">
        <label asp-for="Line2">Line2</label>
        <input class="form-control" asp-for="Line2">
        <span class="text-danger" asp-validation-for="Line2"></span>

    </div>
    <div class="form-group my-3">
        <label asp-for="Line3">Line3</label>
        <input class="form-control" asp-for="Line3">
        <span class="text-danger" asp-validation-for="Line3"></span>

    </div>
    <div class="form-group my-3">
        <label asp-for="City">City</label>
        <input class="form-control" asp-for="City">
        <span class="text-danger" asp-validation-for="City"></span>

    </div>
    <div class="form-group my-3">
        <input asp-for="GiftWrap">
        <label>Gift wrap these items. </label>
    </div>

    <div class="text-center">
        <button type="submit" class="btn btn-primary">
            Complate Order
        </button>
    </div>
</form>