@model ProductDtoForUpdate

<div class="text-center my-5">
    <div class="display-6">Update</div>
</div>

<form method="post" asp-action="Update" enctype="multipart/form-data">
    <input type="hidden" asp-for="ProductId" />
    <div class="form-group my-3">
        <button class="btn btn-outline-dark " asp-action="Index">
            <<i class="bi bi-backspace"></i>
                Back
        </button>
    </div>
    <div class="form-group my-3">
        <select class="form-control" asp-for="CategoryId" asp-items="@ViewBag.Categories"></select>
    </div>
    <div class="form-group my-3">
        <label asp-for="ProductName">Product Name</label>
        <input asp-for="ProductName" class="form-control">
        <span class="text-danger" asp-validation-for="ProductName"></span>
    </div>
    <div class="form-group my-3">
        <label asp-for="Summary">Summary</label>
        <input asp-for="Summary" class="form-control">
        <span class="text-danger" asp-validation-for="Summary"></span>
    </div>
    <div class="form-group my-3">
        <label asp-for="Price">Price</label>
        <input asp-for="Price" class="form-control">
        <span class="text-danger" asp-validation-for="Price"></span>
    </div>
    <div class="form-check form-switch">
        <input asp-for="Showcase" class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
        <label class="form-check-label" for="flexSwitchCheckDefault">Showcase</label>
    </div>


    <div class="form-group my-3">
        <img class="rounded shadow" width="150px" src="@Model?.ImageUrl" />
    </div>
    <div class="form-group my-3">
        <label asp-for="ImageUrl"></label>
        <input type="file" name="file" class="form-control">
        <span class="text-danger" asp-validation-for="ImageUrl"></span>
    </div>
    <div class="form-group my-3">
        <button class="btn btn-primary " type="submit">
            <i class="fa fa-save"></i>
            Update
        </button>
    </div>
</form>