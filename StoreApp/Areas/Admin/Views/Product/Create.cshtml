@model ProductDtoForInsertion

<div class="text-center">
    <div class="display-6">Create</div>
</div>

<form method="post" asp-action="Create">
    <div class="form-group my-3">
        <button class="btn btn-outline-dark " asp-action="Index">
            <<i class="bi bi-backspace"></i>
                Back
        </button>
    </div>
    <div class="form-group my-3">
        <select class="form-control" asp-for="CategoryId" asp-items="@ViewBag.Categories"></select>
    </div>
    <div class="form-group my-3">
        <label asp-for="ProductName">Product Name</label>
        <input asp-for="ProductName" class="form-control">
        <span class="text-danger" asp-validation-for="ProductName"></span>
    </div>
    <div class="form-group my-3">
        <label asp-for="Price">Price</label>
        <input asp-for="Price" class="form-control">
        <span class="text-danger" asp-validation-for="Price"></span>
    </div>
    <div class="form-group my-3">
        <button class="btn btn-primary " type="submit">
            <i class="fa fa-save"></i>
            Save
        </button>
    </div>
</form>